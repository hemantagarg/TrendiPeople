<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <include layout="@layout/header_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp30">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/logo" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <EditText
                android:id="@+id/edtold_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please enter existing password"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dp10"
                android:singleLine="true"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_14" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <EditText
                android:id="@+id/edt_newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please enter new password"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dp10"
                android:singleLine="true"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_14" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20">

            <EditText
                android:id="@+id/edtconfirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Please enter confirm passowrd"
                android:inputType="textEmailAddress"
                android:padding="@dimen/dp10"
                android:singleLine="true"
                android:textColor="@color/textcolordark"
                android:textSize="@dimen/text_size_14" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/blue_button_selecor"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />


    </LinearLayout>

</LinearLayout>
