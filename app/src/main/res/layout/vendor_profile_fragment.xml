<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:id="@+id/rl_banner"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <ImageView
                        android:id="@+id/imge_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/vendor_bg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#7722808f" />

                    <ImageView
                        android:id="@+id/imge_user"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp10"
                        android:src="@drawable/user" />

                    <ImageView
                        android:id="@+id/image_back"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/left_arrow" />

                    <com.app.trendipeople.utils.CustomTextView
                        android:id="@+id/text_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imge_user"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/dp5"
                        android:text="Mellisa Curning"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingbar"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_below="@+id/imge_user"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_toRightOf="@+id/text_username"
                        android:rating="5"
                        android:theme="@style/RatingBar" />

                    <com.app.trendipeople.utils.CustomTextView
                        android:id="@+id/text_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_username"
                        android:layout_centerHorizontal="true"
                        android:text="Soho,london | hairdresser | 22k followers"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/btn_booknow"
                        android:layout_width="120dp"
                        android:layout_height="32dp"
                        android:layout_below="@+id/text_address"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@color/white"
                        android:text="Book Now"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                </RelativeLayout>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/text_blue"
                app:tabIndicatorHeight="@dimen/dp2"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/text_blue"
                app:tabTextColor="#797d80" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".4"
                android:background="@color/view_color" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>