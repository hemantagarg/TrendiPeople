<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_cross"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_gravity="right"
        android:layout_margin="@dimen/dp5"
        android:src="@drawable/cross"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp30">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:text="Select Service"
            android:textColor="@color/textcolordark"
            android:textSize="@dimen/text_size_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/view_color">

            <Spinner
                android:id="@+id/spinner_services"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>


        <TextView
            android:id="@+id/text_add_image"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp20"
            android:background="@color/text_blue"
            android:gravity="center"
            android:text="Add Image"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />

        <EditText
            android:id="@+id/edt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/edit_bg"
            android:hint="HashTag"
            android:maxHeight="@dimen/dp100"
            android:padding="@dimen/dp10"
            android:textColor="@color/textcolordark"
            android:textSize="@dimen/text_size_15" />


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:background="@drawable/blue_button_selecor"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>


</LinearLayout>